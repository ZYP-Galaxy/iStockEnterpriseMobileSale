                android:text="Choose Branch"
                android:layout_toRightOf="@+id/txtdate"
                android:background="@drawable/btnround3"
                android:textColor="@color/btntxtcolor"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/choosebranchid"
                android:textAllCaps="false"/>

            <Button
                android:layout_marginLeft="5dp"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Choose Customer"
                android:layout_toRightOf="@+id/choosebranchid"
                android:background="@drawable/btnround3"
                android:textColor="@color/btntxtcolor"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/choosecustomer"
                android:textAllCaps="false"/>

            <EditText
